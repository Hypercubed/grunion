{
  "name": "grunion",
  "version": "1.0.0",
  "description": "Run multiple commands using glob patterns.",
  "main": "index.js",
  "jsnext:main": "src/index.js",
  "bin": {
    "grunion": "bin/grunion"
  },
  "files": [
    "dist",
    "src",
    "bin"
  ],
  "scripts": {
    "pretest": "npm run build && xo",
    "test": "ava",
    "clean": "rimraf dist",
    "prebuild": "npm run clean",
    "build": "babel src -d dist",
    "version": "chg release -y && git add -A CHANGELOG.md"
  },
  "author": "J. Harshbarger",
  "license": "MIT",
  "devDependencies": {
    "ava": "^0.15.1",
    "babel-cli": "^6.9.0",
    "babel-preset-es2015": "^6.9.0",
    "chg": "^0.3.2",
    "rimraf": "^2.5.2",
    "xo": "^0.15.1"
  },
  "xo": {
    "space": 2,
    "envs": [
      "node"
    ]
  },
  "dependencies": {
    "debug": "^2.2.0",
    "execa": "^0.4.0",
    "globby": "^4.1.0",
    "lodash.template": "^4.2.5",
    "meow": "^3.7.0"
  },
  "directories": {
    "test": "test"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Hypercubed/grunion.git"
  },
  "keywords": [
    "glob",
    "node",
    "run",
    "test"
  ],
  "bugs": {
    "url": "https://github.com/Hypercubed/grunion/issues"
  },
  "homepage": "https://github.com/Hypercubed/grunion#readme"
}
